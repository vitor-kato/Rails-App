<div class="container" align=center>
<h1 >List of all articles</h1>

  <% @articles.each do |article| %>
  <tr>
    <h5>Title:<td><%= link_to article.title, article_path(article) %></td></h5>
    <td><%= article.description %></td>
    <small>Created by: <%= article.user.username if article.user %>,
           <%= article.created_at %> ago,
           last updated: <%= article.updated_at %> ago
    </small>
    </br><td><%= link_to 'Edit', edit_article_path(article) %></td>
    <td><%= link_to 'Delete', article_path(article), method: :delete, data: {confirm: "Are you sure?"} %></td>
  </tr>
  <hr>
  <% end %>
  <p><%= link_to "Create new article", new_article_path %></p>
</div>